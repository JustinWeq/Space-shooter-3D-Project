<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jeremyred.spaceshooter3dproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-feature android:glEsVersion="0x00020000"
            android:required="true"/>
        <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
        <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

        <activity
            android:name=".LevelListActivity"
            android:label="Space shooter 3D"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LevelDetailsActivity"
            android:label="Level Detials"
            android:parentActivityName=".LevelListActivity"/>

        <activity android:name=".GameActivity"
            android:label="Game"
            android:parentActivityName=".LevelDetailsActivity"/>

    </application>

</manifest>
